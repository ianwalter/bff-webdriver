{
  "name": "@ianwalter/bff-webdriver",
  "description": "A bff plugin to enable WebDriver-based testing",
  "version": "5.0.0",
  "author": "Ian Walter <public@iankwalter.com> (https://iankwalter.com)",
  "homepage": "https://github.com/ianwalter/bff-webdriver#readme",
  "license": "SEE LICENSE IN LICENSE",
  "bin": {
    "bff-webdriver": "cli.js"
  },
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "test": "bff",
    "bff-webdriver": "./cli.js",
    "postinstall": "./cli.js setup"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ianwalter/bff-webdriver.git"
  },
  "bugs": {
    "url": "https://github.com/ianwalter/bff-webdriver/issues"
  },
  "keywords": [
    "bff",
    "webdriver",
    "selenium",
    "test",
    "testing",
    "automated",
    "standalone",
    "browserstack"
  ],
  "files": [
    "index.js",
    "cleanup.js",
    "cli.js",
    "integrations"
  ],
  "dependencies": {
    "@ianwalter/bsl": "^2.0.0",
    "@ianwalter/cli": "^1.2.0",
    "@ianwalter/print": "^3.0.1",
    "dotenv": "^8.0.0",
    "execa": "^2.0.3",
    "got": "^9.6.0",
    "p-settle": "^3.1.0",
    "selenium-standalone": "^6.16.0",
    "webdriverio": "^5.10.9"
  },
  "devDependencies": {
    "@ianwalter/bff": "^6.3.0",
    "@ianwalter/eslint-config": "^2.0.1",
    "@ianwalter/renovate-config": "^1.1.1",
    "@ianwalter/test-server": "^1.4.3",
    "np": "^5.0.3"
  },
  "bff": {
    "logLevel": "debug",
    "plugins": [
      "config",
      "index"
    ],
    "webdriver": {
      "capabilities": {
        "browserName": "firefox",
        "bstack:options": {
          "local": true,
          "projectName": "bff-webdriver",
          "timezone": "New_York"
        }
      }
    }
  },
  "renovate": {
    "extends": [
      "@ianwalter"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@ianwalter"
    ]
  }
}
